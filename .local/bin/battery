#!/bin/bash
state=$(acpi -b | egrep -E '(Charging|Discharging|Full)' -o)
stateMessage=$(acpi -b | grep -E -o '[0-9]*%, [0-9][0-9]:[0-9][0-9]' | sed 's/, /->/')

if [ "$state" == "Full" ]
then
	echo  100%
	echo
	echo "#0099ff"
fi


if [ "$state" == "Charging" ]
then
	echo  $stateMessage
	echo
	echo "#ffff00"
fi


if [ "$state" == "Discharging" ]
then
	echo  $stateMessage
	echo
	echo "#ff0000"
fi
