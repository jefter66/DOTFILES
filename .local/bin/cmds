#!/bin/sh

# Directories
alias \
    pv="~/documents/.private/"                          \
    sp=$HOME"/documents/.private/scripts"               \
    dw=$HOME"/downloads"                                \
    torr=$HOME"/downloads/_torrent/"                    \
    ag=$HOME"/documents/agenda/"                        \
    w="~/workspace"                                     \

# Some commands
alias \
    x="startx"                                          \
    du="$SCRIPTS/du"                                    \
    mn="sudo mount /dev/sdb2 ~/Drive"                   \
    um="sudo umount ~/Drive"                            \
    bk=$PV"/scripts/backup"                             \
    r="ranger "                                         \
    down="sudo ip link set wlp6s0 down"                 \
    up="sudo ip link set wlp6s0 up"                     \
    ytl="youtube-dl "                                   \
    ytv="youtube-viewer"                                \
    fix="xsetwacom set 9 MapToOutput LVDS-1"            \

# mistakes
alias\
      sl="ls "                                           \
      sls="ls "                                          \
      lks="ls "                                          \
      lss="ls "                                          \
      dc="cd "                                           \
      cs="cd "                                           \
      vm="mv "                                           \
